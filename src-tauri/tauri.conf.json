{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "nekops",
    "version": "0.0.1"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "app.nekops",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Nekops",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [{
        "name": "ssh",
        "cmd": "ssh",
        "args": true
      }]
    },
    "fs": {
      "scope": {
        "allow": [
          "**"
        ]
      }
    }
  }
}
